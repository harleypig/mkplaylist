[flake8]
# Match the indentation and line length from YAPF
indent-size = 2
max-line-length = 79

# Ignore some errors that conflict with the YAPF style
# E203: whitespace before ':' (conflicts with black/yapf)
# E231: missing whitespace after ',', ';', or ':'
# W503: line break before binary operator (conflicts with modern Python style)
# E501: line too long (handled by max-line-length)
# F401: imported but unused (let isort handle imports)
# F403: 'from module import *' used (let isort handle imports)
# F405: name may be undefined, or defined from star imports (let isort handle imports)
# E402: module level import not at top of file (let isort handle imports)
# I: all import-related errors (let isort handle imports)
ignore = E203,E231,W503,E501,F401,F403,F405,E402,I

# Exclude common directories
exclude =
    .git,
    __pycache__,
    build,
    dist,
    *.egg-info,
    venv,
    .venv,
    .env

# Complexity settings
max-complexity = 10

# Additional plugins (optional)
# You can uncomment these if you have them installed
# plugins =
#     flake8-docstrings
#     flake8-bugbear

# Explicitly disable import order checking since we use isort
# This ensures flake8 won't interfere with isort's rules
extend-ignore = I
